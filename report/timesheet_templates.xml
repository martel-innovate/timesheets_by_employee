<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_timesheets">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="row mb-4">
                        <div class="col-6">
                            <strong>Employee Name</strong>
                            <p t-field="employee.name"/>
                        </div>
                        <div class="col-6">
                            <strong>Timesheet Period</strong>
                            <p t-esc="period"/>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-12">
                            <strong>Total hours</strong>
                            <p t-esc="timesheet_data['total']"/>
                        </div>
                    </div>

                    <t t-foreach="timesheet_data['projects']" t-as="project">
                        <h4 t-esc="project" class="mt-4 mb-3"/>
                        
                        <t t-foreach="timesheet_data['projects'][project]['tasks']" t-as="task">
                            <h5 t-esc="task" class="mt-3 mb-2"/>
                            
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th class="text-right">Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="timesheet_data['projects'][project]['tasks'][task]['entries']" t-as="entry">
                                        <tr>
                                            <td>
                                                <span t-esc="entry['date']" t-options="{'widget': 'date'}"/>
                                            </td>
                                            <td>
                                                <span t-esc="entry['description']"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="entry['duration']"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="2" class="text-right">
                                            <strong>Task Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <t t-set="task_hours" t-value="int(timesheet_data['projects'][project]['tasks'][task]['subtotal'])"/>
                                            <t t-set="task_minutes" t-value="int((timesheet_data['projects'][project]['tasks'][task]['subtotal'] - task_hours) * 60)"/>
                                            <strong>
                                                <t t-esc="'{:02d}:{:02d}'.format(task_hours, task_minutes)"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        
                        <div class="row">
                            <div class="col-12 text-right mb-3">
                                <t t-set="project_hours" t-value="int(timesheet_data['projects'][project]['subtotal'])"/>
                                <t t-set="project_minutes" t-value="int((timesheet_data['projects'][project]['subtotal'] - project_hours) * 60)"/>
                                <strong>Project Total: </strong>
                                <strong t-esc="'{:02d}:{:02d}'.format(project_hours, project_minutes)"/>
                            </div>
                        </div>
                    </t>

                    <div class="row mt-4">
                        <div class="col-12 text-right">
                            <strong>Total Hours: </strong>
                            <span t-esc="timesheet_data['total']" class="ml-2"/>
                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-12">
                            <p>Certified honest and conform,</p>
                            <p>(Date and signature)</p>
                            <p class="text-muted">This document must be dated and signed for reimbursement.</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
